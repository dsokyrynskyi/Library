<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="3" author="daniel">
        <createTable tableName="PUBLISHER">
            <column name="ID" type="INTEGER"/>
            <column name="NAME" type="VARCHAR(250)"/>
            <column name="COUNTRY" type="VARCHAR(250)"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="daniel">
        <addPrimaryKey tableName="PUBLISHER" columnNames="ID"/>
        <addAutoIncrement tableName="PUBLISHER" columnName="ID"/>
        <addNotNullConstraint tableName="PUBLISHER" columnName="NAME"/>
    </changeSet>

</databaseChangeLog>